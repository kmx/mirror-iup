#!/bin/bash

Copy_SOs()
{
  PLAT=$1
  LUA_SFX=$2
  
  echo $PLAT/Lua$LUA_SFX
  mkdir -v ../bin/$PLAT/Lua$LUA_SFX
  cp -fv ../lib/$PLAT/*.so ../lib/$PLAT/*.dylib ../bin/$PLAT/Lua$LUA_SFX
  cp -fv ../../cd/lib/$PLAT/*.so ../../cd/lib/$PLAT/*.dylib ../bin/$PLAT/Lua$LUA_SFX
  cp -fv ../../im/lib/$PLAT/*.so ../../im/lib/$PLAT/*.dylib ../bin/$PLAT/Lua$LUA_SFX
  cp -fv ../../luagl/lib$LUA_SFX/$PLAT/*.so ../../luagl/lib$LUA_SFX/$PLAT/*.dylib ../bin/$PLAT/Lua$LUA_SFX
  cp -fv ../../lfs/lib$LUA_SFX/$PLAT/*.so ../../lfs/lib$LUA_SFX/$PLAT/*.dylib ../bin/$PLAT/Lua$LUA_SFX
  
  rm -fv ../bin/$PLAT/Lua$LUA_SFX/*3.so ../bin/$PLAT/Lua$LUA_SFX/*3.dylib
  if [ $LUA_SFX == 5.1 ]; then
    rm -fv ../bin/$PLAT/Lua$LUA_SFX/*52.so ../bin/$PLAT/Lua$LUA_SFX/*52.dylib
  else
    rm -fv ../bin/$PLAT/Lua$LUA_SFX/*51.so ../bin/$PLAT/Lua$LUA_SFX/*51.dylib
  fi
  
  mv -fv ../bin/$PLAT/iuplua$LUA_SFX ../bin/$PLAT/Lua$LUA_SFX/iuplua$LUA_SFX
}

for plat in Linux26 Linux26_64 Linux26g4 Linux26g4_64 Linux32 Linux32_64 SunOS510 SunOS510x86 MacOS107
do
  Copy_SOs $plat 5.1
  Copy_SOs $plat 52
done
